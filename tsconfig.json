{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "declaration": true,
        "jsx": "react",
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "declarationMap": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "strict": true,
        "strictNullChecks": true,
        "outDir": ".",
        "sourceMap": true
    },
    "exclude": ["node_modules"],
    "include": ["src/*.ts", "src/*.tsx", ]
}

